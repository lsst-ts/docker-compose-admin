#!/bin/bash
# Shutdown the audiotrigger-controller on laser-rpi

machine=laser-rpi
if [ ! -d "docker-compose-ops/summit/${machine}" ]; then
    echo "Audiotrigger controller ${machine} configuration not found!"
    exit 255
fi

cd docker-compose-ops/summit
source setup.env
cd ESS/${machine}
docker compose down
cd ~/
